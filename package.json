{
  "name": "reward-server",
  "version": "1.0.0",
  "description": "reward server",
  "main": "index.js",
  "scripts": {
    "dev:dist": "node -r ./dist/tsconfig-paths-bootstrap.js dist/src/main.js",
    "start": "node -r ./dist/tsconfig-paths-bootstrap.js dist/src/main.js",
    "local": "NODE_ENV=local nodemon --watch 'src/**/*.ts' src/main.ts",
    "build": "tsc -p ./tsconfig.build.json",
    "test:unit": "mocha --parallel --require ts-node/register --require tsconfig-paths/register --exclude 'test/**/*.e2e.spec.ts' 'test/**/*.spec.ts'",
    "test:e2e": "mocha --require ts-node/register --require tsconfig-paths/register 'test/**/*.e2e.spec.ts'",
    "testOne": "mocha --file test/mochaSetup.ts --require ts-node/register --require tsconfig-paths/register",
    "seed": "node ./dist/src/db/seed",
    "seed:dev": "ts-node ./src/db/seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/chai-spies": "^1.0.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.9",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.3",
    "chai": "^4.3.8",
    "chai-spies": "^1.0.0",
    "mocha": "^10.2.0",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "jsonc-parser": "^3.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.3",
    "nodemon": "^3.0.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
